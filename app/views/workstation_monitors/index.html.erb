<%- model_class = WorkstationMonitor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:brand) %></th>
      <th><%= model_class.human_attribute_name(:resolution_width) %></th>
      <th><%= model_class.human_attribute_name(:resolution_hight) %></th>
      <th><%= model_class.human_attribute_name(:remarks) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workstation_monitors.each do |workstation_monitor| %>
      <tr>
        <td><%= link_to workstation_monitor.id, workstation_monitor_path(workstation_monitor) %></td>
        <td><%= workstation_monitor.brand %></td>
        <td><%= workstation_monitor.resolution_width %></td>
        <td><%= workstation_monitor.resolution_hight %></td>
        <td><%= workstation_monitor.remarks %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_workstation_monitor_path(workstation_monitor), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      workstation_monitor_path(workstation_monitor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_workstation_monitor_path,
            :class => 'btn btn-primary' %>
