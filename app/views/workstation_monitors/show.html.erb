<%- model_class = WorkstationMonitor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:brand) %>:</strong></dt>
  <dd><%= @workstation_monitor.brand %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resolution_width) %>:</strong></dt>
  <dd><%= @workstation_monitor.resolution_width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resolution_hight) %>:</strong></dt>
  <dd><%= @workstation_monitor.resolution_hight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remarks) %>:</strong></dt>
  <dd><%= @workstation_monitor.remarks %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              workstation_monitors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_workstation_monitor_path(@workstation_monitor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              workstation_monitor_path(@workstation_monitor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
