<%= form_for @workstation_monitor, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :brand, 'Brand/Model/Size', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :brand, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :resolution_width, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :resolution_width, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :resolution_hight, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :resolution_hight, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :remarks, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :remarks, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                workstation_monitors_path, :class => 'btn' %>
  </div>
<% end %>
