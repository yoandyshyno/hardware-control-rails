<%= form_for @graphic_card, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :model, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :model, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :manufacturer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :manufacturer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :compatible3d, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :compatible3d, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :remarks, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :remarks, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                graphic_cards_path, :class => 'btn' %>
  </div>
<% end %>
