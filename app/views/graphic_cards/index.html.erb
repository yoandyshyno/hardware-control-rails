<%- model_class = GraphicCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:model) %></th>
      <th><%= model_class.human_attribute_name(:manufacturer) %></th>
      <th><%= model_class.human_attribute_name(:compatible3d) %></th>
      <th><%= model_class.human_attribute_name(:remarks) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @graphic_cards.each do |graphic_card| %>
      <tr>
        <td><%= link_to graphic_card.id, graphic_card_path(graphic_card) %></td>
        <td><%= graphic_card.model %></td>
        <td><%= graphic_card.manufacturer %></td>
        <td><% if graphic_card.compatible3d? -%>
          <span style="color:green">&radic;</span>
        <% else -%>
          <span style="color:red">X</span>
        <% end -%></td>
        <td><%= graphic_card.remarks %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_graphic_card_path(graphic_card), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      graphic_card_path(graphic_card),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_graphic_card_path,
            :class => 'btn btn-primary' %>
